layout: false
---
<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
		<meta content="width=device-width" name="viewport">
		<meta content="yes" name="apple-mobile-web-app-capable">

		<title>Articles | Miscellanea</title>

		<meta name="author" content="Darren Newton">
		<meta name="description" content="Listing of all articles on Miscellanea">

		<meta name="msvalidate.01" content="BE7DA3BEF0F11153F6E4B5585C12DB20" />

		<link rel="canonical" href="http://darrenknewton.com/articles/">
  		<%= favicon_tag 'favicon.ico' %>

		<%= stylesheet_link_tag 'screen.css' %>
		<%= stylesheet_link_tag 'pastie.css' %>

		<script src="http://use.typekit.com/lbz5aep.js"></script>
		<script>try{Typekit.load();}catch(e){}</script>
	</head>
	<body id="home" itemscope itemtype="http://schema.org/Blog">

		<div id="masthead-container">
			<div id="masthead" class="container">
				<div id="masthead-logo">
					<a href="/"><%= image_tag 'logo-small.png', :width => '40', :height => '40', :alt => '{(*)}', :itemprop => "image" %> <span><em itemprop="name">Miscellanea</em><i> / Code, design &amp; cultural ephemera</i></span></a>
				</div>
				<nav>
					<%= partial "topnav" %>
				</nav>
			</div>
		</div>

		<div class="container" itemprop="blogPosts">
			<% blog.articles.each do |article| %>
			<article class="hentry" itemscope itemtype="http://schema.org/BlogPosting">
				<header>
					<h1 class="entry-title" itemprop="name"><%= link_to article.title, article.url %></h1>
				</header>

				<div class="entry-content" itemprop="articleBody">
					<%= article.summary %><%= link_to 'Read more about ' + article.title + '&hellip;', article.url, :class => 'read-more' %>
				</div>

				<footer>
					<div class="metadata">
						<time datetime="<%= article.date.strftime('%b-%e-%Y') %>"><span>Posted on</span> <%= article.date.strftime('%b %e, %Y') %></time> | <strong>Metadata:</strong> <%= article.tags.join(', ') %>
					</div>
				</footer>
			</article>
			<% end %>
		</div>

		<div id="article-nav-container">
			<aside id="article-nav" class="container">
				<ul>
					<li id="article-nav-left">
						<%= link_to "<span>&lt;</span> #{blog.articles[0].title}", '/archive' %>
					</li>
					<li id="article-nav-right">
						<%= link_to blog.articles.last.title + " <span>&gt;</span>", blog.articles.last.url %> 
					</li>
				</ul>
			</aside>
			<aside id="article-nav-mobile">
				<a href="/"><span>&lt;</span> Back to homepage</a>
			</aside>
		</div>

		<footer id="footer-page">
			<div class="container">
				<div id="colophon">
					<div id="colophon-a">
						You should follow me on Twitter <a href="https://twitter.com/#!/d_run">here</a>, or you could fork one of my <a href="https://github.com/DarrenN">repos</a> on GitHub.
					</div>
					<div id="colophon-b">
						&copy; 2012 <span itemprop="author">Darren Newton</span>, all rights reserved.
					</div>
				</div>
				<div id="badges">
					<div id="badges-a">
					</div>
					<div id="badges-b">
						<%= partial "coderwall" %>
					</div>
				</div>
			</div>
		</footer>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
		<script src="/js/libs/jquery.scrolldepth.min.js"></script>
		<script>
		    var _gaq = _gaq || [];
		    _gaq.push(['_setAccount', 'UA-26663515-1']);
		    _gaq.push(['_trackPageview']);

		    (function() {
		      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		    })();
		    
			$(function() {
			  $.scrollDepth();
			});
	  </script>
	</body>
</html>